{{#> container}}
  {{#*inline "email-content"}}
  <tr>
    <td
      class="para txt-light"
      style="padding-top: 1rem; color: #ffffff; letter-spacing: 0.3px; line-height: 1.3;"
    >Thank you for completing your payment for
      {{stringify-month month}}
      {{year}}
      for the workspace
      <a
            href="https://app.patr.cloud/workspace"
            class="plain-link txt-primary txt-bold"
            style="color: #f89b41; text-decoration: none; font-weight: 600;"
        >{{workspaceName}}</a>.
    </td>
  </tr>
  <tr>
    <td
      class="para txt-light"
      style="padding-top: 1rem; color: #ffffff; letter-spacing: 0.3px; line-height: 1.3;"
    >$<strong
        class="txt-light"
        style="color: #ffffff"
      >{{cents-to-dollars cardAmountDeducted}}</strong>
      has been successfully charged to your
      card.
    </td>
  </tr>
  {{/inline}}
{{/container}}