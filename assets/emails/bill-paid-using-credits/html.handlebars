{{#> container}}
  {{#*inline "email-content"}}
  {{#if (greater-than  creditsRemaining 0)}}
  <tr>
    <td
      class="para txt-light"
      style="padding-top: 1rem; color: #ffffff; letter-spacing: 0.3px; line-height: 1.3;"
    >Your bill for the workspace <a
            href="https://app.patr.cloud/workspace"
            class="plain-link txt-primary txt-bold"
            style="color: #f89b41; text-decoration: none; font-weight: 600;"
        >{{workspaceName}}</a> amounting to <strong
        class="txt-light"
        style="color: #ffffff"
      >${{cents-to-dollars totalBill}}</strong> has been cleared. 
    </td>
  </tr>
  <tr>
    <td
      class="para txt-light"
      style="padding-top: 1rem; color: #ffffff; letter-spacing: 0.3px; line-height: 1.3;"
    >Remaining credits: <strong
        class="txt-light"
        style="color: #ffffff"
      >${{cents-to-dollars creditsRemaining}}</strong>
    </td>
  </tr>
  {{/if}}
  {{#if (greater-than billRemaining 0)}}
  <tr>
    <td
      class="para txt-light"
      style="padding-top: 1rem; color: #ffffff; letter-spacing: 0.3px; line-height: 1.3;"
    >The credits available in your workspace has been used to reduce your bill for the workspace {{workspaceName}} from <strong
        class="txt-light"
        style="color: #ffffff"
      >${{cents-to-dollars totalBill}}</strong> to <strong
        class="txt-light"
        style="color: #ffffff"
      >${{cents-to-dollars billRemaining}}</strong>.
    </td>
  </tr>
  {{/if}}
  <tr>
    <td
      class="para txt-light"
      style="padding-top: 1rem; color: #ffffff; letter-spacing: 0.3px; line-height: 1.3;"
    >
      If you are facing any issues, reach out
      to us at
      <a
        href="mailto:support@patr.cloud"
        class="plain-link txt-primary"
        title="Contact Patr support"
        style="color: #f89b41; text-decoration: none; font-weight: 500;"
      >support@patr.cloud</a>
    </td>
  </tr>
  {{/inline}}
{{/container}}