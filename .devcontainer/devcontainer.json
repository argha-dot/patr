// For format details, see https://aka.ms/devcontainer.json. For config options, see the
// README at: https://github.com/devcontainers/templates/tree/main/src/rust-postgres
{
	"name": "Patr API",
	"dockerComposeFile": "docker-compose.yml",
	"service": "app",
	"workspaceFolder": "/workspace",
	"customizations": {
		"vscode": {
			"settings": {
				// runs rust analyzer in different folder so that cargo build won't wait to start compiling
				"rust-analyzer.cargo.targetDir": "./target/rust-analyzer",
				"files.watcherExclude": {
					"**/target/**": true,
					"./devcontainer/volume/**": true
				}
			},
			"extensions": [
				"vadimcn.vscode-lldb",
				"rust-lang.rust-analyzer",
				"tamasfe.even-better-toml",
				"usernamehw.errorlens",
				"be5invis.toml",
				"citreae535.sparse-crates"
			]
		}
	},
	"features": {
		"ghcr.io/devcontainers/features/docker-in-docker:2": {
			"installDockerBuildx": true,
			"installDockerComposeSwitch": true,
			"version": "latest",
			"dockerDashComposeVersion": "latest"
		},
		"ghcr.io/devcontainers-contrib/features/redis-homebrew:1": {
			"version": "latest"
		},
		"ghcr.io/eliises/devcontainer-features/bash-profile:1": {
			"command": "alias k=kubectl",
			"file": "$_CONTAINER_USER_HOME/.bashrc"
		}
	},
	"forwardPorts": [
		3000,
		"opentelemetry:16686"
	]
}